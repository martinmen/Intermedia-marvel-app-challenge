<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.com.unlam.marvel_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_marver_luncher_bis"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_marver_luncher_bis_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarvelApp">
        <activity android:name=".view.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.DetailCharacterActivity" />
        <activity android:name=".view.ui.MainActivity" />
        <activity android:name=".view.ui.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

    </application>

</manifest>